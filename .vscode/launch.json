  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pytest - apuntador-backend",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}",
      "args": ["tests"]
    },
    {
      "name": "API - apuntador-backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}",
      "args": [
        "apuntador.main:app",
        "--reload",
        "--port",
        "8000",
        "--host",
        "0.0.0.0"
      ]
    },
    {
      "name": "MyPy - apuntador-backend",
      "type": "debugpy",
      "request": "launch",
      "module": "mypy",
      "cwd": "${workspaceFolder}",
      "args": ["--ignore-missing-imports", "src/"]
    }
  ]
}
